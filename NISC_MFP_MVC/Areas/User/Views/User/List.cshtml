
@{
    ViewBag.Title = "使用者自我管理畫面";
    ViewBag.ActiveNav = "List";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<div class="d-grid gap-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-10">
                @*使用者自我管理畫面 - First Container - Start*@
                <div class="container-fluid shadow p-3 mb-4 bg-body-tertiary rounded bg-light">
                    <div class="row border-bottom border-2 ">
                        <div class="col-6 text-start fs-5 fw-bold" style="color: #1565C0">
                            使用者自我管理畫面&nbsp;<i class="fa-solid fa-circle-info"></i>
                        </div>
                    </div>

                    <div class="row align-items-center">

                        <div class="col-3">
                            <div class="badge bg-primary text-wrap float-end">
                                帳號
                            </div>
                        </div>
                        <div class="col-3">
                            <a class="fs-4 float-start text-decoration-none">TestTest</a>
                        </div>

                    </div>

                    <div class="row align-items-center">

                        <div class="col-3">
                            <div class="badge bg-primary text-wrap float-end">
                                卡號
                            </div>
                        </div>
                        <div class="col-3 pt-2 pb-2 float-start">
                            <select class="form-select">
                                <option selected value="0">---</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                            </select>
                            @*Dynamic binding data*@
                        </div>

                    </div>

                    <div class="row align-items-center">

                        <div class="col-3">
                            <div class="badge bg-primary text-wrap float-end">
                                已使用點數
                            </div>
                        </div>
                        <div class="col-3 pt-2 pb-2 float-start">
                            <a class="fs-4 float-start text-decoration-none">100000</a>
                        </div>

                    </div>
                </div>
                @*使用者自我管理畫面 - First Container - End*@

                <div class="container-fluid shadow p-3 mb-4 bg-body-tertiary rounded bg-light">
                    <div class="row border-bottom border-2 ">
                        <div class="col-6 text-start fs-5 fw-bold" style="color: #1565C0">
                            列印工作&nbsp;<i class="fa-solid fa-print"></i>
                        </div>
                    </div>


                    <div class="row">
                    </div>

                </div>


            </div>

            <div class="col-2">

                <div class="container-fluid shadow-sm p-3 bg-body rounded border border-light">
                    <div class="d-grid gap-2">
                        <button class="btn btn-info">修改使用者密碼</button>
                        <button class="btn btn-success">近期影列印紀錄</button>
                    </div>

                </div>

            </div>

        </div>
    </div>
</div>

