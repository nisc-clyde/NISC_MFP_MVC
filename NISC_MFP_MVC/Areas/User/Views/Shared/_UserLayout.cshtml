<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="bg-black bg-gradient">
    <header class=" header p-3 mb-2 bg-dark bg-gradient">

        <a href="@Url.Action("Print","Admin")" class="logo" data-original-title="">
            <img src="../img/logo.png" alt="Logo">
        </a>

        <style>
            .gridline {
                outline: 3px fa-solid #9E9E9E;
                text-align: center;
                marign: 1px;
            }
        </style>
    </header>

    <div class="container-fluid">
        <div class="card text-center m-3 ">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="@(ViewBag.ActiveNav == "List" ? "nav-link active":"nav-link")" data-bs-toggle="tab" type="button" role="tab"
                                aria-selected=false onclick="location.href ='@Url.Action("list","User")'">
                            <i class="fa-solid fa-bars"></i>&ensp;使用紀錄
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="@(ViewBag.ActiveNav == "LogOut" ? "nav-link active":"nav-link")" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab"
                                aria-selected="false" onclick="location.href ='@Url.Action("User","Login")'">
                            <i class="fa-solid fa-right-from-bracket"></i>&ensp;登出
                        </button>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
