@model NISC_MFP_MVC.ViewModels.UserViewModel

@{

}

<div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
        @using (Html.BeginForm("UserPermissionConfig", "User", FormMethod.Post, new { @id = "permissionForm", @class = "overflow-auto" }))
        {
            @Html.AntiForgeryToken()

            <div class="modal-header">
                <h1 class="modal-title fs-4 fw-bold" id="exampleModalLabel">@ViewBag.formTitle</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body ui-front">

                <table id="deleteDataTable" class="table table-striped table-bordered w-100 fs-6">
                    <thead>
                        <tr>
                            <th>帳號</th>
                            <th>密碼</th>
                            <th>姓名</th>
                            <th>部門名稱</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr id="deleteRowData">
                            <th id="user_id">@Model.user_id</th>
                            <th id="user_password">@Model.user_password</th>
                            <th id="user_name">@Model.user_name</th>
                            <th id="dept_name">@Model.dept_name</th>
                        </tr>
                    </tbody>
                </table>

                <div class="container">
                    <div class="row gy-2 fs-6">
                        <div class="col-3">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                                <label class="form-check-label" for="inlineCheckbox1">列印紀錄</label>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
                                <label class="form-check-label" for="inlineCheckbox2">檔案檢視</label>
                            </div>

                        </div>
                        <div class="col-3">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                                <label class="form-check-label" for="inlineCheckbox3">部門管理</label>
                            </div>

                        </div>
                        <div class="col-3">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                                <label class="form-check-label" for="inlineCheckbox3">使用者管理</label>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                                <label class="form-check-label" for="inlineCheckbox3">事務機管理</label>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                                <label class="form-check-label" for="inlineCheckbox3">卡片管理</label>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                                <label class="form-check-label" for="inlineCheckbox3">儲值紀錄</label>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                                <label class="form-check-label" for="inlineCheckbox3">浮水印管理</label>
                            </div>
                        </div>
                        <div class="col-3 border-bottom border-1 ">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                                <label class="form-check-label" for="inlineCheckbox3">操作紀錄查詢</label>
                            </div>
                        </div>
                        <div class="col-3 border-bottom border-1 ">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                                <label class="form-check-label" for="inlineCheckbox3">系統管理</label>
                            </div>
                        </div>
                        <div class="col-6 border-bottom border-1 ">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                                <label class="form-check-label" for="inlineCheckbox3">報表選項</label>
                            </div>
                        </div>
                        <div class="col">
                            <button type="button" id="btnClearChekced" class="btn btn-danger btn-sm">清除</button>
                            <button type="button" id="btnAllChekced" class="btn btn-info btn-sm">全選</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                <button type="submit" id="btnSubmmit" value="Confirm" class="btn btn-success">確定</button>
            </div>
        }
    </div>
</div>

<script>

    function PermissionClearOrAll() {

    }

    $(function () {
        PermissionClearOrAll();
    })
</script>