
@{
    ViewBag.Title = "使用者管理";
    ViewBag.ActiveNav = "User";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section UserJS{
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/jqueryui")
    <script src="@Url.Content("~/Scripts/AdminPartialViewScripts/user.js")"></script>
}

<div class="d-grid gap-4">
    @*欄位搜尋選項 - First Container - Start*@
    <div class="cotainer-fluid shadow p-3 mb-4 bg-body-tertiary rounded bg-light">

        <div class="row border-bottom border-2 ">
            <div class="col-6 text-start fs-5 fw-bold" style="color: #1565C0">
                欄位搜尋選項&nbsp;<i class="fa-solid fa-magnifying-glass"></i>
            </div>
        </div>

        <div class="row border-x border-bottom border-2 bg-secondary bg-opacity-10">

            <div class="col border-start border-end border-2 ">
                <div class="row justify-content-center border-bottom border-2 fw-semibold">帳號</div>
                <div class="row">
                    <div class="col align-self-center pt-2 pb-2">
                        <input id="searchUser_Account" type="text" class="form-control">
                    </div>
                </div>
            </div>

            <div class="col border-end border-2 ">
                <div class="row justify-content-center border-bottom border-2 fw-semibold">密碼</div>
                <div class="row">
                    <div class="col align-self-center pt-2 pb-2">
                        <input id="searchUser_Password" type="text" class="form-control">
                    </div>
                </div>
            </div>

            <div class="col border-end border-2 ">
                <div class="row justify-content-center border-bottom border-2 fw-semibold">工號</div>
                <div class="row">
                    <div class="col align-self-center pt-2 pb-2">
                        <input id="searchUser_WorkNumber" type="text" class="form-control">
                    </div>
                </div>
            </div>

            <div class="col border-end border-2 ">
                <div class="row justify-content-center border-bottom border-2 fw-semibold">姓名</div>
                <div class="row">
                    <div class="col align-self-center pt-2 pb-2">
                        <input id="searchUser_Name" type="text" class="form-control">
                    </div>
                </div>
            </div>

            <div class="col border-end border-2 ">
                <div class="row justify-content-center border-bottom border-2 fw-semibold">部門編號</div>
                <div class="row">
                    <div class="col align-self-center pt-2 pb-2">
                        <input id="searchUser_DepartmentID" type="text" class="form-control">
                    </div>
                </div>
            </div>

            <div class="col border-end border-2 ">
                <div class="row justify-content-center border-bottom border-2 fw-semibold">部門名稱</div>
                <div class="row">
                    <div class="col align-self-center pt-2 pb-2">
                        <input id="searchUser_DepartmentName" type="text" class="form-control">
                    </div>
                </div>
            </div>

            <div class="col border-end border-2 ">
                <div class="row justify-content-center border-bottom border-2 fw-semibold">彩色使用權限</div>
                <div class="row">
                    <div class="col align-self-center pt-2 pb-2">
                        <select id="searchUser_ColorPermissionSelect" class="form-select">
                            <option id="searchUser_ColorPermissionAll" selected value="0">全部</option>
                            <option id="searchUser_ColorPermissionNo" value="1">無</option>
                            <option id="searchUser_ColorPermissionYes" value="2">有</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="col border-end border-2 ">
                <div class="row justify-content-center border-bottom border-2 fw-semibold">信箱</div>
                <div class="row">
                    <div class="col align-self-center pt-2 pb-2">
                        <input id="searchUser_Mail" type="text" class="form-control">
                    </div>
                </div>
            </div>

        </div>
    </div>
    @*欄位搜尋選項 - First Container - End*@

    @*使用者列表 - Third Cotainer - Start*@
    <div class="cotainer-fluid shadow p-3 mb-4 bg-body-tertiary rounded bg-light">

        <div class="row border-bottom border-2" style="color: #1565C0">
            <div class="col text-start fs-5 fw-bold mb-1">
                使用者列表&nbsp;<i class="fa-solid fa-list"></i>
                <button id="btnAddUser" type="button" class="ms-3 btn btn-success mb-1">新增使用者</button>
                <div class="modal fade" id="userForm" role="dialog" data-url='@Url.Action("AddUser","User")'></div>
                <div class="modal fade" id="searchDepratmentForm" role="dialog" data-url='@Url.Action("SearchDepartment","User")'></div>
            </div>

        </div>

        <div class="row p-2">
            <table id="searchUserDataTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>帳號</th>
                        <th>密碼</th>
                        <th>工號</th>
                        <th>姓名</th>
                        <th>部門代碼</th>
                        <th>部門名稱</th>
                        <th>彩色使用權限</th>
                        <th>信箱</th>
                        <th>操作</th>
                        <th>serial</th>
                    </tr>
                </thead>
            </table>
        </div>

    </div>
    @*使用者列表 - Third Cotainer - End*@

</div>

