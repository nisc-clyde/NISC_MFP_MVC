@model NISC_MFP_MVC.Models.DTO.SearchCardReaderDTO

@{
    
}

<div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-4 fw-bold" id="exampleModalLabel">新增事務機</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm("AddUser", "User", FormMethod.Post))
            {
                <div class="row mx-3 mb-3">
                    @Html.LabelFor(d => d.cr_id, "卡機編號", new { @class = "form-label ps-0 fw-semibold" })
                    @Html.TextBoxFor(d => d.cr_id, new { @class = "form-control" })
                </div>

                <div class="row mx-3 mb-3">
                    @Html.LabelFor(d => d.cr_ip, "位置", new { @class = "form-label ps-0 fw-semibold" })
                    @Html.TextBoxFor(d => d.cr_ip, new { @class = "form-control" })
                </div>

                <div class="row mx-3 mb-3">
                    @Html.LabelFor(d => d.cr_port, "PORT", new { @class = "form-label ps-0 fw-semibold" })
                    @Html.TextBoxFor(d => d.cr_port, new { @class = "form-control" })
                </div>

                <div class="row mx-3 mb-3">
                    @Html.LabelFor(d => d.cr_type, "卡機種類", new { @class = "form-label ps-0 fw-semibold" })
                    @Html.DropDownList("cr_type", new List<SelectListItem> {
                   new SelectListItem{ Text="事務機",Value="1"},
                   new SelectListItem{ Text="影印機",Value="2"},
                   new SelectListItem{ Text="印表機",Value="3"}
               }, new { @class= "form-control" })
                </div>

                <div class="row mx-3 mb-3">
                    @Html.LabelFor(d => d.cr_mode, "運作模式", new { @class = "form-label ps-0 fw-semibold" })
                    <div class="col px-0">
                        <div class="form-check form-check-inline">
                            @Html.RadioButtonFor(d => d.cr_mode, "1", new { @class = "form-check-input" })
                            <label class="form-check-label fs-6" for="flexRadioDefault1">
                                連線
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            @Html.RadioButtonFor(d => d.cr_mode, "2", new { @class = "form-check-input" })
                            <label class="form-check-label fs-6" for="flexRadioDefault1">
                                離線
                            </label>
                        </div>
                    </div>
                </div>

                <div class="row mx-3 mb-3">
                    @Html.LabelFor(d => d.cr_card_switch, "卡號判斷開關", new { @class = "form-label ps-0 fw-semibold" })
                    <div class="col px-0">
                        <div class="form-check form-check-inline">
                            @Html.RadioButtonFor(d => d.cr_card_switch, "1", new { @class = "form-check-input" })
                            <label class="form-check-label fs-6" for="flexRadioDefault1">
                                開啟
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            @Html.RadioButtonFor(d => d.cr_card_switch, "2", new { @class = "form-check-input" })
                            <label class="form-check-label fs-6" for="flexRadioDefault1">
                                關閉
                            </label>
                        </div>
                    </div>
                </div>

                <div class="row mx-3 mb-3">
                    @Html.LabelFor(d => d.cr_status, "狀態", new { @class = "form-label ps-0 fw-semibold" })
                    <div class="col px-0">
                        <div class="form-check form-check-inline">
                            @Html.RadioButtonFor(d => d.cr_status, "1", new { @class = "form-check-input" })
                            <label class="form-check-label fs-6" for="flexRadioDefault1">
                                線上
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            @Html.RadioButtonFor(d => d.cr_status, "2", new { @class = "form-check-input" })
                            <label class="form-check-label fs-6" for="flexRadioDefault1">
                                離線
                            </label>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
            <button type="button" class="btn btn-success">新增</button>
        </div>
    </div>
</div>
