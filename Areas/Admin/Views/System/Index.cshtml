
@{
    ViewBag.Title = "系統管理";
    ViewBag.ActiveNav = "System";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-grid gap-4">
    <div class="cotainer-fluid shadow p-3 mb-4 bg-body-tertiary rounded bg-light">

        <div class="row border-bottom border-2 ">
            <div class="col-6 text-start fs-5 fw-bold" style="color: #1565C0">人事資料匯入&nbsp;<i class="fa-solid fa-file-import"></i></div>
        </div>

        <div class="row border-start border-end border-bottom border-2 ">
            <div class="col p-3 justify-content-center">

                <div class="input-group mb-3 justify-content-center">
                    <input class="form-control" type="file" id="fileResource">
                </div>

                @*<div class="form-group">*@
                    <p class="text-center">輸入檔(文字檔)格式說明</p>
                    <p class="text-center">每一行的格式如下：</p>
                    <p class="text-center">卡號(8-10碼)"部門編號"部門名稱"姓名"帳號"工號"0遞減卡or1遞增卡"0停用or1啟用"email</p>
                    <br />
                    <p class="text-center fw-bold">EX：</p>
                    <p class="text-center">00011111111"HE00000"人事部"王小明"aptg"R0001"0"1"test@nisc.com.tw</p>
                    <br />
                    <p class="text-center fw-bold">無工號EX：</p>
                    <p class="text-center">00011111111"HE00000"人事部"王小明"aptg"0"1"test@nisc.com.tw</p>
                @*</div>*@

                <div class="col justify-content-end">
                    <button id="btnFileImport" type="button" class="btn btn-success btn-lg">匯入</button>
                </div>

            </div>
        </div>

    </div>
</div>

