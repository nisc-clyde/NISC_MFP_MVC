
@{
    ViewBag.Title = "儲值紀錄";
    ViewBag.ActiveNav = "Deposite";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section DepositeJS{
    <script src="@Url.Content("~/Scripts/AdminPartialViewScripts/deposite.js")"></script>
}


@*欄位搜尋選項 - First Container - Start*@
<div class="cotainer-fluid shadow p-3 mb-4 bg-body-tertiary rounded bg-light">

    <div class="row border-bottom border-2 ">
        <div class="col-6 text-start fs-5 fw-bold" style="color: #1565C0">
            欄位搜尋選項&nbsp;<i class="fa-solid fa-magnifying-glass"></i>
        </div>
    </div>

    <div class="row border-x border-bottom border-2 bg-secondary bg-opacity-10">

        <div class="col border-start border-end border-2 ">
            <div class="row justify-content-center border-bottom border-2 fw-semibold">
                儲值人員
            </div>
            <div class="row">
                <div class="col align-self-center pt-2 pb-2">
                    <input id="searchDeposite_Name" type="text" class="form-control">
                </div>
            </div>
        </div>

        <div class="col border-end border-2 ">
            <div class="row justify-content-center border-bottom border-2 fw-semibold">
                儲值帳號
            </div>
            <div class="row">
                <div class="col align-self-center pt-2 pb-2">
                    <input id="searchDeposite_Account" type="text" class="form-control">
                </div>
            </div>
        </div>

        <div class="col border-end border-2 ">
            <div class="row justify-content-center border-bottom border-2 fw-semibold">
                儲值卡號
            </div>
            <div class="row">
                <div class="col align-self-center pt-2 pb-2">
                    <input id="searchDeposite_CardNumber" type="text" class="form-control">
                </div>
            </div>
        </div>

        <div class="col border-end border-2 ">
            <div class="row justify-content-center border-bottom border-2 fw-semibold">
                卡片持有者帳號
            </div>
            <div class="row">
                <div class="col align-self-center pt-2 pb-2">
                    <input id="searchDeposite_CardOwnerAccount" type="text" class="form-control">
                </div>
            </div>
        </div>

        <div class="col border-end border-2 ">
            <div class="row justify-content-center border-bottom border-2 fw-semibold">
                卡片持有者姓名
            </div>
            <div class="row">
                <div class="col align-self-center pt-2 pb-2">
                    <input id="searchDeposite_CardOwnerName" type="text" class="form-control">
                </div>
            </div>
        </div>

        <div class="col border-end border-2 ">
            <div class="row justify-content-center border-bottom border-2 fw-semibold">
                儲值前點數
            </div>
            <div class="row">
                <div class="col align-self-center pt-2 pb-2">
                    <input id="searchDeposite_BeforePoint" type="text" class="form-control">
                </div>
            </div>
        </div>

        <div class="col border-end border-2 ">
            <div class="row justify-content-center border-bottom border-2 fw-semibold">
                儲值點數
            </div>
            <div class="row">
                <div class="col align-self-center pt-2 pb-2">
                    <input id="searchDeposite_Point" type="text" class="form-control">
                </div>
            </div>
        </div>

        <div class="col border-end border-2 ">
            <div class="row justify-content-center border-bottom border-2 fw-semibold">
                儲值後點數
            </div>
            <div class="row">
                <div class="col align-self-center pt-2 pb-2">
                    <input id="searchDeposite_AfterPoint" type="text" class="form-control">
                </div>
            </div>
        </div>

        <div class="col border-end border-2 ">
            <div class="row justify-content-center border-bottom border-2 fw-semibold">
                儲值時間
            </div>
            <div class="row">
                <div class="col align-self-center pt-2 pb-2">
                    <input id="searchDeposite_Time" type="text" class="form-control">
                </div>
            </div>
        </div>

    </div>
</div>
@*欄位搜尋選項 - First Container - End*@

@*儲值紀錄列表 - Second Cotainer - Start*@
<div class="cotainer-fluid shadow p-3 mb-4 bg-body-tertiary rounded bg-light">

    <div class="row border-bottom border-2 ">
        <div class="col-6 text-start fs-5 fw-bold" style="color: #1565C0">儲值紀錄列表&nbsp;<i class="fa-solid fa-clock-rotate-left"></i></div>
    </div>

    <div class="row p-2">
        <table id="searchDepositeDataTable" class="table table-striped table-bordered w-100">
            <thead>
                <tr>
                    <th>儲值人員</th>
                    <th>儲值帳號</th>
                    <th>儲值卡號</th>
                    <th>卡號持有者帳號</th>
                    <th>卡號持有者姓名</th>
                    <th>儲值前點數</th>
                    <th>儲值點數</th>
                    <th>儲值後點數</th>
                    <th>儲值時間</th>
                </tr>
            </thead>
        </table>
    </div>

</div>
@*儲值紀錄列表 - Second Cotainer - End*@